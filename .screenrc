escape ^Z^Z
hardstatus alwayslastline "%{=b rw} %-Lw%{=b ky}%n%f %?%h%:%t%?%{-}%+Lw %="
caption splitonly "%{= Kw}%?%F%{=b KY}>%: %? %n %t"
msgwait 2
vbell off
defbce "on"
term xterm-256color
defencoding UTF-8
defscrollback 10000
autodetach on
shell -${SHELL}
termcapinfo xterm*|Eterm|mlterm "hs:ts=\E]0;:fs=\007:ds=\E]0;screen\007;ti@:te@"
altscreen on

bind k kill
bind ^o next
bind ^p prev
bind ^g break
bind ^r copy
bind ^y paste .
bind -c REGION 3 split -v
bind -c REGION 2 split
bind -c REGION 1 only
bind -c REGION 0 remove
bind -c REGION o focus
bind w command -c REGION
bind ^m resize
bind o focus
bind ^j focus down
bind ^k focus up
bind ^h focus left
bind ^l focus right
bind ^b windowlist -b
bind b select
bind ^a other


markkeys h=^b:l=^f:$=^e:=^g
markkeys ' '=^@
markkeys ' '=^w
bindkey -m -t ^v    stuff ^d
bindkey -m -t ^[v    stuff ^u


activity "Activity: #%n%f %t^G"

bell_msg ""

#cjkwidth on
