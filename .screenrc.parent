escape ^U^U
caption always "%{= wk} %=%-w%{= Kw}%n %h%{-}%+w "
msgwait 5
vbell off
term xterm-256color
cjkwidth on
defencoding UTF-8
defscrollback 10000
autodetach on
shell -${SHELL}
ignorecase
defbce on
termcapinfo xterm* 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'
altscreen on

bindkey -t ^Z^D detach
bind ^c screen -t new screen_child
shelltitle new

bind k kill
bind ^o next
bind ^p prev
bind ^g break
bind ^r copy
bind ^y paste .
bind -c REGION 3 split -v
bind -c REGION 2 split
bind -c REGION 1 only
bind -c REGION 0 remove
bind -c REGION o focus
bind w command -c REGION
bind ^m resize
bind o focus
bind ^j focus down
bind ^k focus up
bind ^h focus left
bind ^l focus right
bind ^b windowlist -b
bind b select
bind ^a other

bind f
bind ^f

markkeys h=^b:l=^f:$=^e:=^g
markkeys ' '=^@
markkeys ' '=^w
bindkey -m -t ^v    stuff ^d
bindkey -m -t ^[v    stuff ^u
markkeys ' '=^w

activity "Activity: #%n%f %t^G"

bell_msg ""
