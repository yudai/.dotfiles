#!/bin/bash -e

function fall_back() {
    echo "Failed to merge commit. Falling back to rebase -i."
    echo "Your changes in index are stored in stash."
    git checkout ${current_branch}
    git rebase -i ${to_revision}^
    echo "Again, if you didn't pop, your changes are stored in stash."
    exit
}


if [ -z $1 ]; then
    echo "Revision to fix was not given."
    exit 1
fi

current_branch="$(git rev-parse --abbrev-ref HEAD)"

if [ "${current_branch}" = "HEAD" ]; then
    echo "Detached branch"
    exit 2;
fi

to_revision=$1

if (git diff-index --cached --quiet HEAD --); then
    echo "No local cached changes."
    exit 3;
fi
git stash -a

git checkout $1
if !(git stash pop --index); then
    fall_back
fi

git commit --amend
git stash -a

git rebase --onto HEAD ${to_revision} ${current_branch}

git stash pop --index
